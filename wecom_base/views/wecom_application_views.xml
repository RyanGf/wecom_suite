<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="view_wecom_application_filter" model="ir.ui.view">
            <field name="name">wecom.application.search</field>
            <field name="model">wecom.application</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="app_name"/>
                    <field name="company_id"/>
                    <field name="type_id"/>
                    <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_company" string="Company" domain="[]" context="{'group_by': 'company_id'}"/>
                        <filter name="group_type" string="Type" domain="[]" context="{'group_by': 'type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_wecom_application_kanban" model="ir.ui.view">
            <field name="name">wecom.application.kanban</field>
            <field name="model">wecom.application</field>
            <field name="arch" type="xml">
                <kanban sample="1" class="o_kanban_mobile">
                    <field name="app_name"/>
                    <field name="company_id"/>
                    <field name="type_id"/>
                    <field name="agent_id"/>
                    <field name="is_active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <!-- Consider using an icon or image field here -->
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="app_name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <field name="type_id" widget="badge"/>
                                    </div>
                                    <ul>
                                        <li>Company: <field name="company_id"/></li>
                                        <li>Agent ID: <field name="agent_id"/></li>
                                        <li t-if="record.is_active.raw_value" class="text-success">
                                            <i class="fa fa-check-circle"/> Active
                                        </li>
                                        <li t-if="!record.is_active.raw_value" class="text-danger">
                                            <i class="fa fa-times-circle"/> Inactive
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_wecom_application_form" model="ir.ui.view">
            <field name="name">wecom.application.form</field>
            <field name="model">wecom.application</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="refresh_app_info" string="Refresh App Info" type="object" class="oe_highlight"/>
                        <button name="get_access_token" string="Get Access Token" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="app_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="type_id"/>
                                <field name="agent_id"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="secret" password="True"/>
                                <field name="access_token" readonly="1"/>
                                <field name="token_expiration_time" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Categories">
                                <field name="category_ids" widget="many2many_tags"/>
                            </page>
                            <page string="Webhooks">
                                <field name="webhook_ids"/>
                            </page>
                            <page string="Settings">
                                <field name="setting_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_wecom_application_tree" model="ir.ui.view">
            <field name="name">wecom.application.tree</field>
            <field name="model">wecom.application</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="app_name"/>
                    <field name="company_id"/>
                    <field name="type_id"/>
                    <field name="agent_id"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_wecom_application" model="ir.actions.act_window">
            <field name="name">WeChat Work Applications</field>
            <field name="res_model">wecom.application</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'group_by':['company_id']}</field>
            <field name="search_view_id" ref="view_wecom_application_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first WeChat Work Application!
                </p>
            </field>
        </record>
    </data>
</odoo>